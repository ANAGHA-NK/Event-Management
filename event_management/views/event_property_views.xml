<?xml version="1.0"?>
<odoo>

<!--    tree view event type-->
    <record id="event_property_view_tree" model="ir.ui.view">
        <field name="name">event.property.tree</field>
        <field name="model">event.property</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name"/>
                <field name="code"/>
                <field name="image"/>
            </tree>
        </field>
    </record>

<!--    action event type -->
    <record id="event_property_action" model="ir.actions.act_window">
        <field name="name">Event Types</field>
        <field name="res_model">event.property</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="event_property_action" model="ir.actions.act_window">
        <field name="name">Event Types</field>
        <field name="res_model">event.property</field>
        <field name="view_mode">tree,form</field>
    </record>

<!--form view event type-->
    <record id="event_property_view_form" model="ir.ui.view">
        <field name="name">event.property.form</field>
        <field name="model">event.property</field>
        <field name="arch" type="xml">
            <form string="Event">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                          <field name="code"/>
                        </group>
                        <group>
                          <field name="image"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>